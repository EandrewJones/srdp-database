{
    "index_patterns": "*",
    "settings": {
        "analysis": {
            "filter": {
                "autocomplete_filter": {
                    "type": "ngram",
                    "min_gram": 1,
                    "max_gram": 10
                }
            },
            "analyzer": {
                "autocomplete": { 
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "autocomplete_filter"
                    ]
                }
            }
        },
        "index.max_ngram_diff" : 10,
        "index.number_of_shards": 1
    },
    "mappings": {
        "_doc": {
            "properties": {
                "body": {
                    "type": "text",
                    "analyzer": "autocomplete", 
                    "search_analyzer": "standard" 
                },
                "username": {
                    "type": "text",
                    "analyzer": "autocomplete", 
                    "search_analyzer": "standard" 
                },
                "about_me": {
                    "type": "text",
                    "analyzer": "autocomplete", 
                    "search_analyzer": "standard" 
                }
            }
        }
    }
}
